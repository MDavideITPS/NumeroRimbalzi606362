<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home">

    <TextView
        android:text="@string/appNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:id="@+id/appNameTextView"
        android:textStyle="bold"
        android:textColor="@color/material_blue_grey_800"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maxPassaggiTextEdit"
        android:text="10"
        android:gravity="center"
        android:editable="true"
        android:layout_below="@+id/appNameTextView"
        android:layout_alignLeft="@+id/appNameTextView"
        android:layout_alignStart="@+id/appNameTextView"
        android:layout_marginTop="70dp"
        android:textSize="20sp"
        android:inputType="number" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/startButton"
        android:id="@+id/startButton"
        android:textColor="@color/button_material_dark"
        android:layout_below="@+id/maxPassaggiTextEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/risultatoTextView"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:inputType="number"
        android:layout_below="@+id/startButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />
</RelativeLayout>
