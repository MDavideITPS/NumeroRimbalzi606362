<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.sss.m606362.d_menga.numerorimbalzi606362.GiocatoreUno">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/playerOneActivityLabel"
        android:id="@+id/textView"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textColor="@color/material_blue_grey_800"
        android:gravity="center"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rimbalziMaxTextView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:textSize="20sp"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rimbalziTextView1"
        android:gravity="center"
        android:textSize="20sp"
        android:phoneNumber="false"
        android:text="0"
        android:inputType="number"
        android:layout_below="@+id/passaGiocatoreDueButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skipToPlayerTwoButton"
        android:id="@+id/passaGiocatoreDueButton"
        android:textColor="@color/button_material_dark"
        android:layout_below="@+id/rimbalziMaxTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

</RelativeLayout>
